<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Const1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/Ddaydata_DateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100일(예시)"
                app:layout_constraintTop_toTopOf="@id/Const1"
                app:layout_constraintLeft_toLeftOf="@id/Const1"
                android:textSize="20sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/Ddaydata_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.12.25"
                app:layout_constraintTop_toBottomOf="@id/Ddaydata_DateName"
                app:layout_constraintLeft_toLeftOf="@id/Const1"
                app:layout_constraintBottom_toBottomOf="@id/Const1"
                android:textSize="17sp"

                />
            <TextView
                android:id="@+id/Ddaydata_Dday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/Const1"
                app:layout_constraintBottom_toBottomOf="@id/Const1"
                app:layout_constraintRight_toRightOf="@id/Const1"
                android:text="D-100"
                android:textStyle="bold"
                android:textSize="20sp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_herActivity"
    android:orientation="vertical"
    android:paddingHorizontal="60dp"
    android:background="@color/mainpink2">

    <TextView
        android:textSize="20sp"
        android:textColor="@color/textcolor"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방의 이메일을 입력해"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/textcolor"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서로를 연결해주세요!"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="20dp">
        <EditText
            android:id="@+id/et_signupHer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/et_signupHer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="이메일"/>
        <EditText
            android:id="@+id/et_signupHer_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="핸드폰 번호"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_signupHer_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/mainpink2"
                android:layout_marginRight="8dp"
                android:text="뒤로가기"
                android:textColor="@color/textcolor"
                />
            <Button
                android:id="@+id/btn_signupHer_connect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/mainpink"
                android:layout_marginLeft="8dp"
                android:text="연결하기"
                android:textColor="@color/textcolor"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
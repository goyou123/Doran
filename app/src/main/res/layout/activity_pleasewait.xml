<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PleasewaitActivity"
    android:background="@color/mainpink2">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/tv_ConnectFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청 대기중입니다!"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/tv_ConnectFirst2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방의 수락을 기다려 주세요!"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/btn_goLoginActivity"
        app:layout_constraintTop_toBottomOf="@id/tv_ConnectFirst"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
android:textColor="@color/textcolor"
         />


    <Button
        android:id="@+id/btn_goLoginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="로그인화면으로 돌아가기"
        android:textColor="@color/textcolor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ConnectFirst2"
        android:background="@color/mainpink"
        android:paddingHorizontal="20dp"/>

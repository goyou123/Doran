<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeprofileActivity"
    android:background="@color/mainpink2">

    <ImageView
        android:id="@+id/iv_Changeprofile_pinkline"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/mainpink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_Changeprofilelogo"
        app:layout_constraintTop_toTopOf="@id/iv_Changeprofile_pinkline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_Changeprofile_pinkline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 수정"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/iv_Changeprofile_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/left1"
        android:textSize="25sp"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_Changeprofile_pinkline"
        app:layout_constraintBottom_toBottomOf="@id/iv_Changeprofile_pinkline"
        android:layout_marginLeft="15dp"
        />
        
    <LinearLayout
        android:id="@+id/linearLayout1"
        app:layout_constraintTop_toBottomOf="@id/iv_Changeprofile_pinkline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="60dp"
        android:paddingTop="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:paddingBottom="90dp"
       >
        <EditText
            android:id="@+id/et_Changeprofile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/et_Changeprofile_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_Changeprofile_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로가기"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/mainpink"
                android:textColor="@color/textcolor"/>
            <Button
                android:id="@+id/btn_Changeprofile_Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장하기"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@color/mainpink"
                android:textColor="@color/textcolor"/>


        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>